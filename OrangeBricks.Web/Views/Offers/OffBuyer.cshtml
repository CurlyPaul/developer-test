@model OrangeBricks.Web.Controllers.Offers.ViewModels.OffersOffBuyerViewModel
@{
    ViewBag.Title = "MyOffers";
}

<h2>My Offers</h2>

<p>Here are the offers that you have made.</p>

@if (Model.HasOffers)
{
    <p>You have made @Model.Offers.Count() offers...</p>

    foreach (var offer in Model.Offers)
    {
        <hr />
        <div>
            <p><strong>Property</strong> @offer.StreetName @offer.PropertyType</p>
            <p><strong>Offer Amount: </strong> £@offer.Amount</p>
            <p><strong>Offer Made At: </strong> @offer.CreatedAt.ToLongTimeString() on @offer.CreatedAt.ToShortDateString()</p>
            <p><strong>Status: </strong> @offer.Status</p>
        </div>

    }
}
else
{
    <div class="alert alert-info" role="alert">
        You have not made any offers yet!
    </div>
}